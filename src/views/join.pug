extends base.pug

block content
  h1 Make Account
    form#BOJ
      input(name="userId-Boj", placeholder="백준 아이디", type="text", class="bojID", minlength=3, required)#BOJ-ID
      input(name="solvedExp", placeholder="solvedac exp", type="text", required)#BOJ-EXP
      button GO
    span#AUTH 
    <hr>
    form(method="POST")
    input(name="userId", placeholder="백준 아이디", type="text", readonly=true)#userID
    input(name="password", placeholder="Password" type="password", required)
    input(name="password2", placeholder="Confirm password" type="password", required)
    input(name="email", placeholder="Email" type="email", required)
    input(type="submit",value="Join")
block scripts 
  script(src="/static/js/checkBOJ.js")
